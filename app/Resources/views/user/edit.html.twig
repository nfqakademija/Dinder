{% extends 'base.html.twig' %}

{% block body %}
    <!-- =-=-=-=-=-=-= Latest Ads =-=-=-=-=-=-= -->
    <section class="section-padding gray">
        <!-- Main Container -->
        <div class="container">
            <div class="row">
                <!-- Middle Content Area -->
                <div class="col-md-12 col-xs-12 col-sm-12">
                    <!-- Row -->
                    <div class="profile-section margin-bottom-20">
                        <div class="profile-tabs">
                            <ul class="nav nav-justified nav-tabs">
                                <li><a href="{{ path('user_show') }}">View Profile</a></li>
                                <li class="active"><a>Edit Profile</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="profile-edit tab-pane fade in active" id="edit">
                                    <h2 class="heading-md">Manage your profile information</h2>
                                    <div class="clearfix"></div>
                                    {{ form_start(edit_form) }}
                                    {{ form_widget(edit_form) }}
                                    <button type="submit" class="btn btn-theme btn-sm">Update My Info</button>
                                    {{ form_end(edit_form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Middle Content Area  End -->
            </div>
        </div>
        <!-- Main Container End -->
    </section>
    <!-- =-=-=-=-=-=-= Ads Archives End =-=-=-=-=-=-= -->
{% endblock %}
